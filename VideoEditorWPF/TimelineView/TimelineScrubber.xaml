<UserControl x:Class="VideoEditorWPF.TimelineScrubber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoEditorWPF"
             mc:Ignorable="d" d:DesignWidth="300" Height="36" MouseMove="UserControl_MouseMove">
    <Grid Margin="0,0,0,0">
        <Grid VerticalAlignment="Top" Height="26" ClipToBounds="True" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
            <Rectangle x:Name="line" Fill="Black" Height="5" Margin="0" StrokeThickness="10" VerticalAlignment="Center" MouseDown="line_MouseDown"/>
            <Rectangle x:Name="scrubHandle" Fill="White" HorizontalAlignment="Left" Height="27" Margin="0" VerticalAlignment="Center" Width="10" Stroke="Black" SnapsToDevicePixels="True" ClipToBounds="True" MouseDown="scrubHandle_MouseDown" MouseUp="scrubHandle_MouseUp"/>
        </Grid>
        <Rectangle x:Name="seekLine" HorizontalAlignment="Left" IsHitTestVisible="False" Width="1" Fill="Red"/>
    </Grid>
</UserControl>
