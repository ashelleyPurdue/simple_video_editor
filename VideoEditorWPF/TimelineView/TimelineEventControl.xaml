<UserControl x:Class="VideoEditorWPF.TimelineEventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoEditorWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="visibleRectangle" Fill="#FF999999" SnapsToDevicePixels="True"/>
        <Rectangle x:Name="leftHandle" Fill="#FF4B4B4B" HorizontalAlignment="Left" Height="300" Width="3" Cursor="SizeWE" />
        <Rectangle x:Name="rightHandle" Fill="#FF4B4B4B" HorizontalAlignment="Right" Height="300" Width="3" Cursor="SizeWE"/>
    </Grid>
</UserControl>
